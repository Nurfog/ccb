# Database
DATABASE_URL=postgres://user:password@db:5432/ml_db

# Device Selection (auto | cuda | cpu)
# auto: Detecta automáticamente GPU/CPU
# cuda: Fuerza uso de GPU (falla si no está disponible)
# cpu: Fuerza uso de CPU (útil para testing)
ML_DEVICE=auto

# CUDA (solo si ML_DEVICE=cuda)
CUDA_VISIBLE_DEVICES=0

# Model Storage
MODELS_DIR=./models
CHECKPOINTS_DIR=./checkpoints

# Training Defaults
DEFAULT_BATCH_SIZE=32
DEFAULT_LEARNING_RATE=0.001
DEFAULT_EPOCHS=100
